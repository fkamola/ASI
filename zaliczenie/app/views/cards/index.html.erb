<p id="notice"><%= notice %></p>

<h1>Cards</h1>


<div class="table-responsive">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Cost</th>
      <th>Power</th>
      <th>Toughness</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.color %></td>
        <td><%= card.cost %></td>
        <td><%= card.power %></td>
        <td><%= card.toughness %></td>
        <td><%= link_to card, class:'btn btn-primary btn-xs' do %>
        <i class='glyphicon glyphicon-eye-open'></i> Show
        <% end %>
        </td>
        <td><%= link_to edit_card_path(card), class:'btn btn-primary btn-xs' do %>
         <i class='glyphicon glyphicon-pencil'></i> Edit
        <% end %>
        </td>
        <td><%= link_to card, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-xs' do %>
          <i class='glyphicon glyphicon-trash'></i> Destroy
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

 
  <%= will_paginate @card %>
  


<br>

<%= link_to new_card_path, class: 'btn btn-success' do %>
 <i class='glyphicon glyphicon-plus'></i> New Card
<% end %>
